@model IEnumerable<TranAnhShop.Models.mProduct>
@foreach (var row in Model)
{
<div class="t-item">
    <a href="~/@row.Slug">
        <div class="t-img">
            <img src="~/Public/images/products/@row.Image" alt="" class="beau">
            @if (row.Installment == 1)
            {
<div class="anw">Trả góp <span class="font-weight-bold">0%</span></div>                }

        </div>
        <div class="couple">
            @if (row.Discount == 1)
            {
<img src="~/Public/images/online-giảm-sốc-1x.png" alt="" class="h-100">                }
        </div>
        <div class="t-np">
            @row.Name
        </div>
        <div class="t-price">
            <div class="price">
                @String.Format("{0:0,0₫}", row.ProPrice)
            </div>
            <div class="old-price float-left">
                @String.Format("{0:0,0₫}", row.ProPrice)
            </div>
            <div class="khongbietdattenlagi float-left">(-@String.Format("{0:0}", ((row.Price - row.ProPrice) / row.Price * 100))%)</div>
        </div>
    </a>
</div>}

